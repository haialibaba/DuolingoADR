<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/txtBackSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#B1B0B0"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:gravity="start|center_horizontal"
            android:textFontWeight="600"
            android:layout_marginLeft="10dp"
            android:cursorVisible="true"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        >
        <EditText
            android:id="@+id/edName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/icon_username"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Họ và tên"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorHint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/icon_gmail"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorHint"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/edPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/icon_phonecall"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorHint"
            android:textSize="16sp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnShowHidePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_visible_off"
                android:contentDescription="Show/Hide Password"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/edRePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/icon_resetpassword"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Nhập lại password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnShowHideRePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/icon_visible_off"
                android:contentDescription="Show/Hide Password"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="16sp"
            android:background="@drawable/custom_button_getstarted"
            android:backgroundTint="#E6E4EA"
            android:textColor="#BAB4B4"
            android:cursorVisible="true"
            />


        <Button
            android:id="@+id/btnSignUpWithGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_radius_white"
            android:drawableStart="@drawable/icon_google"
            android:elevation="8dp"
            android:gravity="start|center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingHorizontal="70dp"
            android:paddingVertical="15dp"
            android:stateListAnimator="@null"
            android:text="     SIGN UP WITH GOOGLE"
            android:textFontWeight="600"
            android:cursorVisible="true"
            />

        <Button
            android:id="@+id/btnSignUpWithFacebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_white"
            android:drawableStart="@drawable/icon_facebook"
            android:elevation="8dp"
            android:gravity="start|center_vertical"
            android:hapticFeedbackEnabled="false"
            android:paddingHorizontal="65dp"
            android:paddingVertical="15dp"
            android:stateListAnimator="@null"
            android:text="     SIGN UP WITH FACEBOOK"
            android:layout_marginTop="10dp"
            android:textFontWeight="600"
            android:layout_gravity="center"
            android:cursorVisible="true"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By signing in to Lingo Simple, you agree to our"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Privacy Police"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textFontWeight="600"/>

    </LinearLayout>





</LinearLayout>